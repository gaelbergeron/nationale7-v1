<div class="dernieres-voitures-section">
  <p class="dernieres-voitures-title">Nos dernières voitures</p>
  <div class="title-green-line"></div>

  <div class="row small-up-1 large-up-3" id="filterrific_results">
    
    <% @cars.each do |car| %>

      <script> 
      // This js snippet was put in erb because I couldn't figure out how to pass ruby variables in the js file
      $(document).ready(function(){

        $(".extra-info-layer").hide();

        $(".carItem<%= car.id %>").mouseover(function () {
            $(".car-extra-info<%= car.id %>").show("fast");
        });

        $(".carItem<%= car.id %>").mouseleave(function () {
          $(".car-extra-info<%= car.id %>").hide("fast");
        });
      });
      </script>

      <div class="column carItem<%= car.id %>" >
        <div class="picture-extras">
          <%= link_to image_tag( @profile_photos.where(car_id: car.id).first.picture_url, :class => "car-image" ), { action: 'details', controller: 'cars',  id: car } %>
          <div class="car-extra-info<%= car.id %> extra-info-layer">
            <p class="engine-version"><%= car.motorisation %> <%= car.finition %> </p>
            <p class="mileage"> <%= number_with_delimiter(car.kilometrage, :delimiter => ' ') %> Km</p>
          </div>
        </div>
        <p class="derniere-voiture-name">
         <%= car.marque %> <%= car.modele %> <%= car.annee %> 
        </p> </br>
        <p class="derniere-voiture-prix">
          <%= car.prix_n7 %> €
        </p>
      </div>

    <% end %>
  </div>

  <div class="toutes-voitures-div">
    <%= link_to 'Voir toutes nos voitures', acheter_path, class: "toutes-voitures-link" %>
    <div class="toutes-voitures-line"></div>
  </div>

</div>

